@model NewModel
@{
    ViewData["Title"] = "Jauns sludinājums";
}

<h2>Jauns sludinājums</h2>

@Html.ValidationSummary()

<form class="form-horizontal" action="New" method="post">
    <div class="form-group">
        <label for="kategorija" class="col-sm-2 control-label">Kategorija:</label>
        <div class="col-sm-10">
            <select asp-for="CategoryId" asp-items="@(new SelectList(Model.Categories, "Id", "Title"))" class="form-control" id="kategorija">
                <option value="">-- Izvēlieties kategoriju</option>
            </select>
        </div>
    </div>
    <div class="form-group">
        <label for="cena" class="col-sm-2 control-label">Cena:</label>
        <div class="col-sm-10">
            <input asp-for="Price" type="number" class="form-control" id="cena" placeholder="Cena">
        </div>
    </div>
    <div class="form-group">
        <label for="vieta" class="col-sm-2 control-label">Atrašanās vieta:</label>
        <div class="col-sm-10">
            <input asp-for="Location" type="text" class="form-control" id="vieta" placeholder="Atrašanās vieta">
        </div>
    </div>
    <div class="form-group">
        <label for="talrunis" class="col-sm-2 control-label">Tālrunis:</label>
        <div class="col-sm-10">
            <input asp-for="Phone" type="tel" class="form-control" id="talrunis" placeholder="Tālrunis">
        </div>
    </div>
    <div class="form-group">
        <label for="epasts" class="col-sm-2 control-label">E-pasts</label>
        <div class="col-sm-10">
            <input asp-for="Email" type="email" class="form-control">
        </div>
    </div>
    <div class="form-group">
        <label for="apraksts" class="col-sm-2 control-label">Apraksts</label>
        <div class="col-sm-10">
            <textarea asp-for="Description" class="form-control" input type="text" id="apraksts" placeholder="Apraksts"></textarea>
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-default">Saglabāt sludinājumu</button>
        </div>
    </div>
</form>