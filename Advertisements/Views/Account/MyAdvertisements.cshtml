@model List<Advertisement>
@{
    ViewData["Title"] = "MyAdvertisements";
}

<h2>Mani sludinājumi</h2>

<div class="container">
    <table class="table">
        <tr>
            <th class="col-sm-2">Attēls</th>
            <th class="col-sm-2">Virsraksts</th>
            <th class="col-sm-6">Apraksts</th>
            <th class="col-sm-2">Cena</th>
        </tr>
        @if (Model.Count == 0)
        {
            <tr>
                <td colspan="4" class="col-sm-12 success text-center">Jums nav neviena sludinājuma</td>
            </tr>
        }
        else
        {
            @foreach (Advertisement ad in Model)
            {
                <tr>
                    <td class="col-sm-2">@ad.Photo</td>
                    <td class="col-sm-2"><a asp-controller="Advertisement" asp-action="Advertisement" asp-route-id="@ad.Id">@ad.Title</a></td>
                    <td class="col-sm-6">@ad.Description</td>
                    <td class="col-sm-2">@ad.Price €</td>
                    <td>
                     <a asp-controller="Advertisement" asp-action="Delete" asp-route-id="@ad.Id">Remove</a>
                     </td>
                </tr>
            }
        }
    </table>
</div>