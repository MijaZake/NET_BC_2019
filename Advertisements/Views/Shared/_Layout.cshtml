<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Advertisements</title>

    <environment include="Development">
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
        <link rel="stylesheet" href="~/css/site.css" />
    </environment>
    <environment exclude="Development">
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css"
              asp-fallback-href="~/lib/bootstrap/dist/css/bootstrap.min.css"
              asp-fallback-test-class="sr-only" asp-fallback-test-property="position" asp-fallback-test-value="absolute" />
        <link rel="stylesheet" href="~/css/site.min.css" asp-append-version="true" />
    </environment>
</head>
<body>
    <nav class="navbar navbar-inverse">
        <div class="container-fluid">
            <div class="navbar-header">
                <a class="navbar-brand" asp-controller="Advertisement" asp-action="Index">LOGO</a>
            </div>

            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav navbar-right">
                    <li><a asp-controller="Advertisement" asp-action="Index">Sludinājumi</a></li>
                    @if (Context.Session.GetUserEmail() == null)
                    {
                        <li><a asp-controller="Account" asp-action="SignIn">Pieslēgties</a></li>
                        <li><a asp-controller="Account" asp-action="SignUp">Reģistrēties</a></li>
                    }
                    else
                    {
                        <li><a href="#">@Context.Session.GetUserEmail()</a></li>
                        <li><a asp-controller="Account" asp-action="SignOut">Sign out</a></li>
                    }
                </ul>
            </div>
        </div>
    </nav>

    @RenderBody()

</body>
</html>
